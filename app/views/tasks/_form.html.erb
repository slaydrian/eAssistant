<%= form_with(model: task, local: true, id: "event_form", class: "modal-content animate") do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
  <div class="field">
    <%= form.label :task_name %>
    <%= form.text_field :task_name, id: :task_task_name %>
  </div>

  <div class="field">
    <%= form.label :deadline_date %>
    <%= form.datetime_select :deadline_date, id: :task_deadline_date, value: Date.today, required: false %>
    <!-- <%= form.time_select :deadline_time, {minute_step: 5}, id: :task_deadline_time, required: true %> -->
  </div>

  <div class="field">
    <%= form.label :required_time %>
    <%= form.time_select :required_time, id: :task_required_time %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <%= form.number_field :priority, id: :task_priority %>
  </div>

  <div class="field" id="task-color">
    <%= form.label :color %>
    <%= form.color_field :color, id: :task_color %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment, id: :task_comment %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
</div>
<% end %>
